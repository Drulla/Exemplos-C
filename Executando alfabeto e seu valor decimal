
#include<stdio.h>
// vetores 01

int main (){

	//vetores e strigs

	char nome[50];
	char letras[26];
	//int numeros [10];
	//float valores[5];

	printf("Qual é o seu nome? ");
	fflush(stdout);
	gets (nome);
	printf("Olá %s\n",nome);

	int contador =0;
	for(int i=97; i <=122; i++){
		letras[contador] =i;
		contador = contador +1;
	}
	// imprimindo as letras e seus valores em decimal
	for(int i =0; i<26; i++){
		printf("%d == %c\n", letras[i], letras[i]);
	}


	return 0;

}
