
#include <stdio.h>
//Operações matematicas

int main(){

	int num1, num2, res;

	printf("Informe o num1:");
	fflush(stdout);
	scanf("%d", &num1);

	printf("Informe o num2:");
	fflush(stdout);
	scanf("%d", &num2);


	res =(num1+num2);
		printf("A soma é %d\n", res);

	res =(num2-num1);
		printf("A subtração é %d\n", res);

	res =(num1*num2);
		printf("A multiplicação é %d\n", res);

	res =(num1/num2);
		printf("A divisão é %d\n", res);

	res =(num1 * num1);
		printf("O quadrado é %d\n", res);

	if(num1 % 2 ==0){
		printf("%d é Par", num1);
	}
	else{
		printf("%d é Impar", num1);
	}


	return 0;
}
