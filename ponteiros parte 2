#include<stdio.h>


int main() {

	int n; // variavel que guarda seu valor na memoria
	//declarando o ponteiro
	int* p; //ponteiro é um valor que aponta para um endereço de memoria


	printf("informe um numero: ");
	fflush(stdout);
	scanf("%d", &n);

	//inicializando o ponteiro
	p = &n;

	printf("O numero informado foi %d\n",n);
	printf("O endereco de memoria é %d\n", &n);

	printf("Endereco do ponteiro: %p", p);

	return 0;
}
